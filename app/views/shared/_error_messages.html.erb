<% if object.errors.any? %>
  <div class="alert alert-error shadow-lg">
    <div id="error_messages">
      <ul class="mt-1.5 ml-4 list-disc list-inside">
        <% object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
