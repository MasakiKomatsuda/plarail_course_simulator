    <div class="mb-10 md:mb-16">
      <h2 class="lg:text-3xl font-bold text-center mb-4 md:mb-6"><%= t('.title') %></h2>
    </div>
    <div class="mb-10 md:mb-16">
      <h2 class="lg:text-3xl font-bold mb-4 md:mb-6"><%= @course.title %></h2>
